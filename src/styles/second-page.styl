.second-page
  display flex
  justify-content center
  align-items center
  border 1px solid red
  height 760px
  background-image url('./../assets/image/placeholder.jpg')
  background-size cover
  &-content
    position relative
    display flex
    width 960px
    height 510px
    border 1px solid green
    background-color $white
    box-shadow 10px 4px 15px 20px alpha($black, .2)
    &-left
      position relative
      width 44%
      height 100%
      background-image url('./../assets/image/second_pages_img_1.jpg')
      &__icons
        height 100%
        display flex
        flex-direction column
        justify-content center
        align-items flex-start
        > .fa
          margin 4px 25px
          color $white
      &__fold
        position absolute
        top 100%
        transform translateY(-100%)
        width 0
        height 0
        border-top 50px solid $white
        border-left 50px solid transparent
    &-right
      box-sizing border-box
      padding 80px 50px 50px
      width 56%
      display flex
      flex-direction column
      justify-content space-between
      background-image url('./../assets/image/mill.png')
      background-repeat no-repeat
      background-position right bottom
      &__head
        font-family Alegreya-Bold
        letter-spacing .2rem
        > h2
          font-size 2.5rem
          color $darkGray
        > h4
          font-size .8rem
          text-transform uppercase
          color $lightBrown
      &__text
        > p
          font-family Proxima_Nova-Regular
          font-size .9rem
          letter-spacing .1rem
          line-height 1.5rem
          color $darkGray
      &-slider
        margin 0 auto
        display flex
        justify-content space-between
        align-items center
        width 100%
        &__button
          box-sizing border-box
          width 32px
          height 32px
          border 2px solid $darkGray
          border-radius 50%
          cursor pointer
          &:hover
            border 2px solid $lightBrown
            > .fa
              color $lightBrown
          > .fa
            width 100%
            height 100%
            display flex
            justify-content center
            align-items center
            color $darkGray
        &__img
          width 330px
          display flex
          justify-content space-between
          align-items center
          > img
            width 90px
            height 90px
            border none
            border-radius 50%
    &-center
      position absolute
      top 50%
      left 44%
      transform translate(-50%, -50%)
      width 50px
      height 50px
      border 1px solid red
      border-radius 50%
      background-color $white
      cursor pointer
      &__menu
        position absolute
        width 9px
        display flex
        justify-content space-between
        align-items center
        top 50%
        left 50%
        transform translate(-50%, -50%)
        &_line
          width 1px
          height 16px
          background-color $lightBrown
    &-kopie
      position absolute
      right 0
      transform translate(54%, -20%)
      border 1px solid red
      width 200px
      height 200px
      background url('./../assets/image/kopie.png'), $white
      box-shadow 0 4px 15px 20px alpha($black, .2)
      &__text
        box-sizing border-box
        height 100%
        display flex
        flex-direction column
        justify-content space-between
        align-items center
        padding 20px
        font-family Alegreya-Bold
        text-align center
        > h3
          color $darkBrown
          text-transform uppercase
          letter-spacing .1rem
        > h2
          font-size 6rem
          letter-spacing .4rem
          line-height .5
          color $lightBrown
        > h4
          color $lightGray
